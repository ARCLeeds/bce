{
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "BCE-2015-spring-preview {{timestamp}}",
      "instance_type": "m3.medium",
      "region": "us-west-1",
      "ami_regions": "us-west-2",
      "source_ami": "ami-01717d44",
      "ssh_username": "ubuntu",
      "tags": {
          "OS_Version": "Ubuntu",
          "Release": "Latest"
      }
    },
    {
      "vm_name": "BCE-2015-spring-preview",
      "disk_size": 16000,
      "output_directory": "build",
      "type": "virtualbox-iso",
      "headless": "true",
      "format": "ova",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto<wait>",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm",
        " netcfg/get_hostname=BCE",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.10/preseed.cfg",
        " --",
        "<enter><wait>"
      ],
      "http_directory": "http",
      "guest_additions_mode": "attach",
      "vboxmanage": [
        [
          "modifyvm",          "{{.Name}}",
          "--memory",          "1024",
          "--cpus",            "1",
          "--clipboard",       "bidirectional",
          "--draganddrop",     "bidirectional",
          "--vram",            "128",
          "--accelerate3d",    "on",
          "--audio",           "alsa",
          "--audiocontroller", "ac97"
        ]
      ],
      "guest_os_type": "Ubuntu_64",
      "iso_checksum": "0c1ebea31c3523cfe9a4ffed8bcf6c7d23dfb97b",
      "iso_checksum_type": "sha1",
      "iso_url": "http://releases.ubuntu.com/14.10/ubuntu-14.10-server-amd64.iso",
      "ssh_username": "oski",
      "ssh_password": "oski",
      "ssh_wait_timeout": "3000s",
      "shutdown_command": "echo 'oski' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "dot-config",
      "destination": "/home/oski/.config",
      "override": {
        "amazon-ebs": {
          "destination": "/home/ubuntu/.config"
        }
      }
    },
    {
      "type": "file",
      "source": "dot-local",
      "destination": "/home/oski/.local",
      "override": {
        "amazon-ebs": {
          "destination": "/home/ubuntu/.local"
        }
      }
    },
    {
      "type": "file",
      "source": "plymouth-theme",
      "destination": "/tmp/bce"
    },
    {
      "type": "file",
      "source": "setup_ipython_notebook.sh",
      "destination": "/home/oski/setup_ipython_notebook.sh",
      "override": {
        "amazon-ebs": {
          "destination": "/home/ubuntu/setup_ipython_notebook.sh"
        }
      }
    },
    {
      "type": "file",
      "source": "packages",
      "destination": "/tmp/packages"
    },
    {
      "type": "file",
      "source": "bootstrap.d",
      "destination": "/tmp/bootstrap.d"
    },
    {
      "type": "shell",
      "script": "bootstrap-bce.sh",
      "environment_vars": ["DEBIAN_PRIORITY=high",
                           "DEBIAN_FRONTEND=noninteractive"],
      "execute_command": "echo 'oski' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "override": {
        "amazon-ebs": {
          "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
        }
      }
    },
    {
      "type": "file",
      "source": "packer-vbox-out.log",
      "destination": "/var/tmp/packer-vbox-out.log"
    }
  ]
}
