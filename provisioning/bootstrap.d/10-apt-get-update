APT_MIRROR=mirrors.ocf.berkeley.edu

echo "BCE: Change to a (usually) faster apt mirror..."
sed -i -e "s/us.archive.ubuntu.com/${APT_MIRROR}/" \
	/etc/apt/sources.list && \
echo "  DONE" || echo "  FAIL"

echo "BCE: Updating apt cache..."
$APT_GET update > /dev/null && \
echo "  DONE" || echo "  FAIL"
