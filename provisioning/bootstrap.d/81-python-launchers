MINICONDA="/home/${BCE_USER}/miniconda"

echo "BCE: Creating python launchers in panel menu..."
sudo -H -u ${BCE_USER} mkdir -p ${DESKTOP_DIR} && \
(
	sudo -H -u ${BCE_USER} cat <<EOF > ${DESKTOP_DIR}/ipython.desktop
[Desktop Entry]
Name=IPython 2.7
Comment=IPython 2.7 Interpreter
Exec=${MINICONDA}/bin/ipython
Icon=${MINICONDA}/lib/python2.7/site-packages/IPython/html/static/base/images/favicon.ico
Terminal=true
Type=Application
Categories=Development;
StartupNotify=true
NoDisplay=false
EOF
) && \
(
	sudo -H -u ${BCE_USER} cat <<EOF > ${DESKTOP_DIR}/ipython3.4.desktop
[Desktop Entry]
Name=IPython 3.4
Comment=IPython 3.4 Interpreter
Exec=${MINICONDA}/envs/py34/bin/ipython
Icon=${MINICONDA}/lib/python2.7/site-packages/IPython/html/static/base/images/favicon.ico
Terminal=true
Type=Application
Categories=Development;
StartupNotify=true
NoDisplay=false
EOF
) && \
(
	sudo -H -u ${BCE_USER} cat <<EOF > ${DESKTOP_DIR}/ipython-notebook.desktop
[Desktop Entry]
Name=IPython Notebook
Comment=IPython Notebook
Exec=${MINICONDA}/bin/ipython notebook
Icon=${MINICONDA}/lib/python2.7/site-packages/IPython/html/static/base/images/favicon.ico
Terminal=false
Type=Application
Categories=Development;
StartupNotify=true
NoDisplay=false
EOF
) && \
(
	sudo -H -u ${BCE_USER} cat <<EOF > ${DESKTOP_DIR}/python2.7.desktop
[Desktop Entry]
Name=Python 2.7
Comment=Python 2.7
Exec=${MINICONDA}/bin/python
Icon=/usr/share/pixmaps/python2.7.xpm
Terminal=true
Type=Application
Categories=Development;
StartupNotify=true
NoDisplay=false
EOF
) && \
(
	sudo -H -u ${BCE_USER} cat <<EOF > ${DESKTOP_DIR}/python3.4.desktop
[Desktop Entry]
Name=Python 3.4
Comment=Python 3.4
Exec=${MINICONDA}/envs/py34/bin/python
Icon=/usr/share/pixmaps/python3.4.xpm
Terminal=true
Type=Application
Categories=Development;
StartupNotify=true
NoDisplay=false
EOF
) && \
echo "  DONE" || echo "  FAIL"
