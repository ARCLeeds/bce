# We run this bootstrap script as $BCE_USER. Otherwise if we were to run
# separate conda invocations within separate sudos, the "activate" will only
# exist as long as sudo's subshell.

function manual_install_conda_packages() {

	arg=$1

	if [ -z "$arg" -o "$arg" == "2" ]; then
		# These pipbuild packages are not compatible with Python 3.
		pb="rpy2==2.5.6 singledispatch==3.4.0.3"

		# Not available via conda yet
		echo "BCE: Installing packages with conda pipbuild..."

		for pv in $pb ; do
			p=${pv/==*/}
			v=${pv/*==/}

			echo "BCE:   ${pv}"
			conda pipbuild ${p}	--release ${v}
			conda install --yes --use-local ${pv}
		done && \
		echo "  DONE" || echo "  FAIL"
	fi

	# These do not pipbuild cleanly
	PIPINSTALL="sklearn-pandas==0.0.9 datascience==0.3.dev21"

	for pi in ${PIPINSTALL} ; do
		pip install ${pi}
	done
}

# Main
url="http://repo.continuum.io/miniconda/Miniconda-3.9.1-Linux-x86_64.sh"
install_script="$(basename ${url})"

if [ ! -f /tmp/${install_script} ]; then
	echo "BCE: Download ${install_script}..."
	curl -o /tmp/${install_script} "${url}" && \
	echo "  DONE" || echo "  FAIL"
fi

echo "BCE: Install ${install_script}..."
bash /tmp/${install_script} -b && \
echo "  DONE" || echo "  FAIL"

# We default to Anaconda. 
echo "BCE: Prepending miniconda to PATH..."
(
	echo
	echo '# BCE: Added by bootstrap'
	echo 'export PATH=${HOME}/miniconda/bin:${PATH}'
) | tee -a ${HOME}/.bashrc ${HOME}/.profile

source ${HOME}/miniconda/bin/activate ${HOME}/miniconda

# These can only be in the root environment
echo "BCE: Installing python 2.7 packages with conda..."
conda install --yes conda==3.13.0 conda-build==1.13.0 conda-env==2.1.4

for p in $(cat /tmp/packages/conda-requirements-py27.txt); do
	conda install --yes ${p}
done && \
echo "  DONE" || echo "  FAIL"

manual_install_conda_packages

# All of these fail
# conda install pp
# conda pipbuild pp
echo "BCE: Installing parallel python..."
PP_VERSION=1.6.4
pip install --allow-external pp --allow-unverified pp pp==${PP_VERSION} && \
echo "  DONE" || echo "  FAIL"

echo "BCE: Installing python 3.4 packages with conda..."
conda create --yes -n py34 python=3.4 && \
source activate py34
for p in $(cat /tmp/packages/conda-requirements-py34.txt); do
	conda install --yes ${p}
done && \
echo "  DONE" || echo "  FAIL"

echo "BCE: Update IPython profile to include Python 3.4 kernel..."
ipython kernelspec install-self --user && \
echo "  DONE" || echo "  FAIL"

manual_install_conda_packages 3.4

echo "BCE: Deleting binstar token..."
rm -f "${HOME}/.config/binstar/https%3A%2F%2Fapi.binstar.org.token" && \
echo "  DONE" || echo "  FAIL"

echo "BCE: Remove cached packages and tarballs..."
conda clean --yes --tarballs --packages && \
echo "  DONE" || echo "  FAIL"
